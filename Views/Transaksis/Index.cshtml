@model IEnumerable<UCP1_PAW_089_C.Models.Transaksi>

@{
    ViewData["Title"] = "Index";
}

<h1>Transaksi</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tanggal)
            </th>
            <th>
                @Html.DisplayName("ID Produk")
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tanggal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProdukNavigation.IdProduk)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTransaksi"><i class="fas fa-user-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdTransaksi"><i class="fas fa-info-circle"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdTransaksi"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
